{
	"name": "service-api",
	"version": "1.0.0",
	"main": "src/app.ts",
	"license": "MIT",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only src/app.ts",
		"build": "tsc",
		"test-build": "npm run build & node build/src/app.js",
		"lint": "next lint",
		"prettier": "prettier --list-different .",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"cz": "git cz",
		"cz:install": "commitizen init cz-conventional-changelog --yarn --dev --exact",
		"cz:force": "commitizen init cz-conventional-changelog --yarn --dev --exact --force",
		"lint-staged": "lint-staged",
		"prepare": "husky install",
		"token": "node -e \"console.log(crypto.randomBytes(32).toString('hex'))\"",
		"docker:build": "docker build . -t service-api:latest",
		"docker:run": "docker run --env-file=.env -p=3050:3050 --name service-api -d -it service-api:latest"
	},
	"devDependencies": {
		"@rushstack/eslint-config": "^3.1.1",
		"@types/bcrypt": "^5.0.0",
		"@types/body-parser": "^1.19.2",
		"@types/compression": "^1.7.2",
		"@types/config": "^3.3.0",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/hpp": "^0.2.2",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/lodash": "^4.14.189",
		"@types/module-alias": "^2.0.1",
		"@types/nanoid": "^3.0.0",
		"@types/node": "^18.11.9",
		"@types/nodemailer": "^6.4.6",
		"@types/passport": "^1.0.11",
		"@types/passport-jwt": "^3.0.7",
		"@types/passport-local": "^1.0.34",
		"@types/pino": "^7.0.5",
		"@types/uuid": "^8.3.4",
		"commitizen": "^4.2.5",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.27.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.2",
		"jest": "^29.3.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"prisma": "^4.6.1",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"@prisma/client": "^4.6.1",
		"argon2": "^0.30.2",
		"bcrypt": "^5.1.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"compression": "^1.7.4",
		"config": "^3.3.8",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dayjs": "^1.11.6",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"helmet": "^6.0.0",
		"hpp": "^0.2.3",
		"http-status-codes": "^2.2.0",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.21",
		"module-alias": "^2.2.2",
		"nanoid": "^4.0.0",
		"nodemailer": "^6.8.0",
		"passport": "^0.6.0",
		"passport-google-oauth2": "^0.2.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"pino": "^8.7.0",
		"pino-pretty": "^9.1.1",
		"reflect-metadata": "^0.1.13",
		"socket.io": "^4.5.3",
		"uuid": "^9.0.0",
		"zod": "^3.19.1"
	},
	"lint-staged": {
		"*.(ts|tsx)": "eslint --cache --fix",
		"*": "prettier --write --ignore-unknown"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/grid-momenta/template-express-saas"
	},
	"_moduleAliases": {
		"@config": "config",
		"@src": "src",
		"@modules": "src/modules",
		"@middlewares": "src/middlewares",
		"@providers": "src/providers",
		"@utils": "src/utils",
		"@common": "src/common"
	}
}
